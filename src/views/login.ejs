<% var title = 'Identification' %>
<% include head %>
<% include header %>

<div class="w3-card-4 w3-margin">
  <div class="w3-container w3-brown">
    <h2 class="w3-lobster">Identification</h2>
  </div>
  <form class="w3-container" method="post" action="/login">
    <p>
		<label class="w3-text-brown"><b>Email</b></label>
		<input class="w3-input w3-border w3-sand" name="email" type="email" value="<%= user.email %>">
	</p>
    <p>
		<label class="w3-text-brown"><b>Mot de passe</b></label>
		<input class="w3-input w3-border w3-sand" name="password" type="password">
	</p>
  <% include errorMessage %>
	<div class="w3-row w3-margin-bottom w3-lobster">
	  <div class="w3-half w3-container">
		    <a href="/signup" class="w3-btn w3-brown">Inscription</a>
	  </div>
	  <div class="w3-half w3-container w3-right-align">
      <button class="w3-btn w3-brown">Connexion</button>
      <a href="https://slack.com/oauth/authorize?scope=identity.basic&client_id=267547141460.299333203283"><img src="https://api.slack.com/img/sign_in_with_slack.png" /></a>
	  </div>
	</div>
  </form>
</div>

<% include foot %>
