<% var title = 'Inscription' %>
<% include head %>
<% include header %>

<div class="w3-card-4 w3-margin">
  <div class="w3-container w3-brown">
    <h2>Inscription</h2>
  </div>
  <form class="w3-container" method="post" action="/signup">
    <p>      
		<label class="w3-text-brown"><b>Email</b></label>
		<input class="w3-input w3-border w3-sand" name="email" type="email">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Mot de passe</b></label>
		<input class="w3-input w3-border w3-sand" name="password" type="password">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Confirmation du mot de passe</b></label>
		<input class="w3-input w3-border w3-sand" name="password_confirmation" type="password">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Nom</b></label>
		<input class="w3-input w3-border w3-sand" name="name" type="text">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Pr√©nom</b></label>
		<input class="w3-input w3-border w3-sand" name="surname" type="text">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Date de naissance</b></label>
		<input class="w3-input w3-border w3-sand" name="birthday" type="date">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Adresse</b></label>
		<input class="w3-input w3-border w3-sand" name="name" type="text">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Complement d'adresse</b></label>
		<input class="w3-input w3-border w3-sand" name="name" type="text">
	</p>
    <p>      
		<label class="w3-text-brown"><b>Code Postal</b></label>
		<input class="w3-input w3-border w3-sand" name="name" type="text">
	</p>
	<% include errorMessage %>
    <div class="w3-row w3-margin-bottom">
	  <div class="w3-half w3-container">
		<button class="w3-btn w3-brown">Confirmer</button> 
	  </div>
	  <div class="w3-half w3-container w3-right-align">
		<a href="/" class="w3-btn w3-brown">Annuler</a>
	  </div>
	</div>
  </form>
</div>

<% include foot %>
