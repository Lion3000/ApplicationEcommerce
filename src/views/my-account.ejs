<% var title = 'Gestion de compte' %>
<% include head %>
<% include header %>

<section>
	<aside class="w3-card-4 w3-margin">
		<% include successMessage %>
		<% include errorMessage %>
	</aside>
	<aside class="w3-card-4 w3-margin">
	  <div class="w3-container w3-brown">
	    <h2 class="w3-lobster">Modfication des informations du compte</h2>
	  </div>
	  <form class="w3-container" method="post" action="/my-account">
	    <p>
	  		<label class="w3-text-brown"><b>Email</b></label>
	  		<input class="w3-input w3-border w3-sand" name="email" type="email" value="<%= user.email %>" required>
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Nom</b></label>
	  		<input class="w3-input w3-border w3-sand" name="name" type="text" value="<%= user.nom %>" required>
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Prénom</b></label>
	  		<input class="w3-input w3-border w3-sand" name="surname" type="text" value="<%= user.prenom %>" required>
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Date de naissance</b></label>
	  		<input class="w3-input w3-border w3-sand" name="birthday" type="date" value="<%= user.dateNaissance.toISOString().split('T')[0] %>" required>
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Adresse</b></label>
	  		<input class="w3-input w3-border w3-sand" name="address" type="text" value="<%= user.adresse %>" required>
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Complement d'adresse</b></label>
	  		<input class="w3-input w3-border w3-sand" name="address_supplement" type="text" value="<%= user.complementAdresse %>">
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Code Postal</b></label>
	  		<input class="w3-input w3-border w3-sand" name="postal_code" type="text" value="<%= user.codePostal %>" required>
	  	</p>

	    <div class="w3-margin-bottom w3-lobster w3-container w3-right-align">
		    <button class="w3-btn w3-brown" name="edit">Modifier</button>
			</div>
	  </form>
	</aside>

	<aside class="w3-card-4 w3-margin">
		<div class="w3-container w3-brown">
			<h2 class="w3-lobster">Modfication du mot de passe</h2>
		</div>
		<form class="w3-container" method="post" action="/my-account">
			<p>
				<label class="w3-text-brown"><b>Ancien mot de passe</b></label>
				<input class="w3-input w3-border w3-sand" name="passwordOld" type="password" pattern="\w{6,8}" placeholder="votre mot de passe" title="Le mot de passe doit contenir de 6 à 8 caractères alphanumériques." required>
			</p>
			<p>
	  		<label class="w3-text-brown"><b>Mot de passe</b></label>
	  		<input class="w3-input w3-border w3-sand" name="password" type="password" id="mdp1" pattern="\w{6,8}" onkeyup="validateMdp2()" placeholder="votre mot de passe" title="Le mot de passe doit contenir de 6 à 8 caractères alphanumériques." required>
	  	</p>
	    <p>
	  		<label class="w3-text-brown"><b>Confirmation du mot de passe</b></label>
	  		<input class="w3-input w3-border w3-sand" name="password_confirmation" type="password" id="mdp2" onkeyup="validateMdp2()" placeholder="retapez le mot de passe" required>
	  	</p>

			<div class="w3-margin-bottom w3-lobster w3-container w3-right-align">
				<button class="w3-btn w3-brown" name="edit_password">Modifier</button>
			</div>
		</form>
	</aside>

	<aside class="w3-card-4 w3-margin">
		<div class="w3-container w3-brown">
			<h2 class="w3-lobster">Suppression du compte</h2>
		</div>
		<form class="w3-container" method="post" action="/my-account">
			<p>
	  		<label class="w3-text-brown"><b>Mot de passe</b></label>
	  		<input class="w3-input w3-border w3-sand" name="password" type="password" id="mdp1" pattern="\w{6,8}" placeholder="votre mot de passe" title="Le mot de passe doit contenir de 6 à 8 caractères alphanumériques." required>
	  	</p>

			<div class="w3-margin-bottom w3-lobster w3-container w3-right-align">
				<button class="w3-btn w3-brown" name="delete">Supprimer</button>
			</div>
		</form>
	</aside>

</section>

<script src="js/UcInscription.js"></script>
<% include foot %>
